@model LiquidLeave.Models.LeaveApplication

<div class="modal-header">
    <input type="hidden" id="appId" value="@Model.LeaveApplicationId"/>
    <h3 class="modal-title" id="exampleModalLabel">Approve/Dissaprove leave for</h3>

    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-lg-8">
            <h4 id="Name">@(Model.AspNetUser.FirstName + " " + Model.AspNetUser.LastName) </h4>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <label for="NumberOfDaysM">Number of days</label>
            <div id="NumberOfDaysM">@Model.NumberOfDays</div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label for="DateFromM">Date From</label>
            <div id="DateFromM">@Model.DateFrom.ToShortDateString()</div>
        </div>
        <div class="col-md-4">
            <label for="DateToM">Date To</label>
            <div id="DateToM">@Model.DateTo.ToShortDateString()</div>
        </div>

    </div>
    <div class="row">
        <div class="col-lg-8">
            <label for="Comments">Comments</label>
            <textarea class="form-control" id="Comments" rows="3" placeholder="Comments" required></textarea>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    <button type="submit" id="approveApp" class="btn btn-primary denyApprove" data-status="true">Approve</button>
    <button type="submit" id="denyApp" class="btn btn-primary denyApprove" data-status="false">Deny</button>
</div>
